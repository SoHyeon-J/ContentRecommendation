<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainStartBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#DF01A5"
        android:text="~심리테스트 하러 가기~"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintitle"
        app:strokeColor="#FFFFFF" />

    <TextView
        android:id="@+id/maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="359dp"
        android:fontFamily="@font/ddangs"
        android:text="컨텐츠러리"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/mainStartBtn"
        app:layout_constraintEnd_toEndOf="@+id/mainchar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainpopcorn"
        android:layout_width="223dp"
        android:layout_height="403dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainStartBtn"
        app:layout_constraintStart_toStartOf="@+id/maintitle"
        app:srcCompat="@drawable/popcorn" />

    <ImageView
        android:id="@+id/mainchar"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="101dp"
        app:layout_constraintBottom_toTopOf="@+id/mainStartBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/characterresult" />
</androidx.constraintlayout.widget.ConstraintLayout>
