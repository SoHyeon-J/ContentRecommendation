<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:fontFamily="@font/ddangs"
    android:orientation="vertical"
    tools:context=".Result_horror">

    <TextView
        android:id="@+id/swactor"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:text="출연 : 송강, 이도현, 고민시, 이시영 외"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/swposter"
        app:layout_constraintTop_toBottomOf="@+id/swage" />

    <TextView
        android:id="@+id/swott"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="시청 가능 OTT : 넷플릭스"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/swposter"
        app:layout_constraintTop_toBottomOf="@+id/swactor" />

    <ImageView
        android:id="@+id/swlogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/swposter"
        app:layout_constraintTop_toBottomOf="@+id/swott"
        app:srcCompat="@drawable/netfilx" />

    <TextView
        android:id="@+id/swttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="스위트홈(2020)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/swposter"
        app:layout_constraintTop_toBottomOf="@+id/anlogo1" />

    <TextView
        android:id="@+id/swage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="10부작ㆍ청소년 관람 불가"
        android:textColor="#a0a0a0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/swposter"
        app:layout_constraintTop_toBottomOf="@+id/swttitle" />

    <TextView
        android:id="@+id/texthorror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ddangs"
        android:text="당신의 취향은 &quot;호러&quot; 입니다"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/anposter"
        android:layout_width="200dp"
        android:layout_height="200sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texthorror"
        app:srcCompat="@drawable/annabelle" />

    <TextView
        android:id="@+id/antitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="애나벨(2014)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/anposter"
        app:layout_constraintTop_toBottomOf="@+id/texthorror" />

    <TextView
        android:id="@+id/anage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="15세 이용가"
        android:textColor="#a0a0a0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/anposter"
        app:layout_constraintTop_toBottomOf="@+id/antitle" />

    <TextView
        android:id="@+id/anactor"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:text="출연 : 애나벨 월리스, 워드 호튼, 알프리 우다드 외"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/anposter"
        app:layout_constraintTop_toBottomOf="@+id/anage" />

    <TextView
        android:id="@+id/annaott"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="시청 가능 OTT : 넷플릭스"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/anposter"
        app:layout_constraintTop_toBottomOf="@+id/anactor" />

    <ImageView
        android:id="@+id/anlogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/anposter"
        app:layout_constraintTop_toBottomOf="@+id/annaott"
        app:srcCompat="@drawable/netfilx" />

    <ImageView
        android:id="@+id/swposter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sweethome" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        android:text="홈화면으로"
        android:textColorLink="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>