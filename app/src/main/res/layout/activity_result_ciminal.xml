<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:fontFamily="@font/ddangs"
    android:orientation="vertical"
    tools:context=".Result_criminal">

    <TextView
        android:id="@+id/baactor"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:text="출연 : 김상중, 강예원, 민지아, 박해진 외"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/baposter"
        app:layout_constraintTop_toBottomOf="@+id/baage" />

    <TextView
        android:id="@+id/baage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="11부작ㆍ청소년 관람 불가"
        android:textColor="#a0a0a0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/baposter"
        app:layout_constraintTop_toBottomOf="@+id/batitle" />

    <TextView
        android:id="@+id/baott"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:text="시청 가능 OTT : 디즈니 플러스, 티빙"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/baposter"
        app:layout_constraintTop_toBottomOf="@+id/baactor" />

    <TextView
        android:id="@+id/batitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="나쁜 녀석들(2014)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/baposter"
        app:layout_constraintTop_toBottomOf="@+id/ocactor" />

    <TextView
        android:id="@+id/textcriminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ddangs"
        android:text="당신의 취향은 &quot;범죄물&quot; 입니다"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ocposter"
        android:layout_width="200dp"
        android:layout_height="200sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textcriminal"
        app:srcCompat="@drawable/oceans" />

    <TextView
        android:id="@+id/octitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="오션스8(2018)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ocposter"
        app:layout_constraintTop_toBottomOf="@+id/textcriminal" />

    <TextView
        android:id="@+id/ocage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="12세 이용가"
        android:textColor="#a0a0a0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ocposter"
        app:layout_constraintTop_toBottomOf="@+id/octitle" />

    <TextView
        android:id="@+id/ocactor"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:text="출연 : 앤 해서웨이, 리아나, 산드라 블록, 민디 캘링 외"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ocposter"
        app:layout_constraintTop_toBottomOf="@+id/ocage" />

    <ImageView
        android:id="@+id/baposter"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/badguys"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/balogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/baposter"
        app:layout_constraintTop_toBottomOf="@+id/baott"
        app:srcCompat="@drawable/diseny" />

    <ImageView
        android:id="@+id/balogo2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/balogo1"
        app:layout_constraintTop_toBottomOf="@+id/baott"
        app:srcCompat="@drawable/tving" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        android:text="홈화면으로"
        android:textColorLink="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>