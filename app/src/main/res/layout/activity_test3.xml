<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".test3">

    <ImageView
        android:id="@+id/character"
        android:layout_width="292dp"
        android:layout_height="330dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintEnd_toEndOf="@+id/upbutton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/characterresult" />

    <Button
        android:id="@+id/downbutton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#DF01A5"
        android:text="나는 상대방과의 갈등 상황을 즐기는 편이다"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upbutton4" />

    <TextView
        android:id="@+id/q1"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginBottom="420dp"
        android:fontFamily="@font/ddangs"
        android:text="질문3"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/downbutton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/upbutton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="472dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#DF01A5"
        android:text="나는 미신을 잘 믿는 편이다"
        app:layout_constraintBottom_toTopOf="@+id/downbutton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>