<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:fontFamily="@font/ddangs"
    android:orientation="vertical"
    tools:context=".Result_fantasy">

    <TextView
        android:id="@+id/stactor"
        android:layout_width="197dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        android:text="출연 : 위노나 라이더, 밀리 바비 브라운, 나탈리아 다이어, 조 키어리 외"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/stposter"
        app:layout_constraintTop_toBottomOf="@+id/stage" />

    <TextView
        android:id="@+id/stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="9부작ㆍ15세 이용가"
        android:textColor="#a0a0a0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/stposter"
        app:layout_constraintTop_toBottomOf="@+id/sttitle" />

    <TextView
        android:id="@+id/stott"
        android:layout_width="182dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:text="시청 가능 OTT : 넷플릭스"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/stposter"
        app:layout_constraintTop_toBottomOf="@+id/stactor" />

    <TextView
        android:id="@+id/sttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:text="기묘한 이야기(2016)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stposter" />

    <TextView
        android:id="@+id/textfantasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ddangs"
        android:text="당신의 취향은 &quot;판타지&quot; 입니다"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/heposter"
        android:layout_width="200dp"
        android:layout_height="200sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textfantasy"
        app:srcCompat="@drawable/herrypotter" />

    <TextView
        android:id="@+id/hetitle"
        android:layout_width="166dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:text="해리포터와 불의 잔(2005)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/heposter"
        app:layout_constraintTop_toBottomOf="@+id/textfantasy" />

    <TextView
        android:id="@+id/anage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="12세 이용가"
        android:textColor="#a0a0a0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/heposter"
        app:layout_constraintTop_toBottomOf="@+id/hetitle" />

    <TextView
        android:id="@+id/heactor"
        android:layout_width="196dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:text="출연 : 엠마 왓슨, 로버트 패틴슨, 루퍼트 그린트, 톰 펠튼 외"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/heposter"
        app:layout_constraintTop_toBottomOf="@+id/anage" />

    <ImageView
        android:id="@+id/stposter"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/strangestory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/stlogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/stposter"
        app:layout_constraintTop_toBottomOf="@+id/stott"
        app:srcCompat="@drawable/netfilx" />

    <TextView
        android:id="@+id/heott"
        android:layout_width="165dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:text="시청 가능 OTT : 웨이브"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/heposter"
        app:layout_constraintTop_toBottomOf="@+id/heactor" />

    <ImageView
        android:id="@+id/helogo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/heposter"
        app:layout_constraintTop_toBottomOf="@+id/heott"
        app:srcCompat="@drawable/wave" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        android:text="홈화면으로"
        android:textColorLink="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>